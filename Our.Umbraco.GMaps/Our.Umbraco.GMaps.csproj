<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net5.0;net472</TargetFrameworks>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<ContentTargetFolders>content</ContentTargetFolders>
		<IncludeBuildOutput>false</IncludeBuildOutput>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Authors>Arnold Visser</Authors>
		<Company>Arnold Visser</Company>
		<Description>Basic Google Maps with autocomplete property editor for Umbraco 8+</Description>
		<PackageReleaseNotes>Now multi-targeting Umbraco 8 and 9</PackageReleaseNotes>
		<Copyright>Copyright © Arnold Visser</Copyright>
		<Product>$(AssemblyName) - Google Maps for Umbraco 8+</Product>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/ArnoldV/Our.Umbraco.GMaps</PackageProjectUrl>
		<PackageTags>Umbraco Umbraco8 Umbraco9 Google Maps</PackageTags>
		<NeutralLanguage>en-US</NeutralLanguage>
		<PackageReadmeFile>README.nuget.md</PackageReadmeFile>
		<Version>2.0.0.0-pre1</Version>
		<PackageIcon>icon.png</PackageIcon>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net5.0|AnyCPU'">
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net5.0|AnyCPU'">
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net472|AnyCPU'">
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net472|AnyCPU'">
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>

	<ItemGroup>
		<None Include="../icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="../README.nuget.md">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="../readme.txt">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>

		<Content Include="App_Plugins\Our.Umbraco.GMaps\**\*.*">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>Always</CopyToPublishDirectory>
		</Content>

		<None Include="build\**\*.*">
			<Pack>True</Pack>
			<PackagePath>build</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\cs.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\da.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\de.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\en-gb.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\en-us.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\es.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\fr.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\he.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\it.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\ja.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\ko.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\nb.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\nl.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\pl.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\pt.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\ru.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\sv.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\tr.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\zh-tw.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\lang\zh.xml" />
	  <None Remove="App_Plugins\Our.Umbraco.GMaps\maps.css" />
	</ItemGroup>
	
	<ItemGroup>
		<ProjectReference Include="..\Our.Umbraco.GMaps.Core\Our.Umbraco.GMaps.Core.csproj" />
	</ItemGroup>
</Project>
